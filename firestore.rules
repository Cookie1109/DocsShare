rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Groups collection
    match /groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
      
      // Files subcollection (for file sharing)
      match /files/{fileId} {
        allow read, write: if request.auth != null;
      }
      
      // Messages subcollection (for chat messages including system messages)
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }
    
    // Tags collection - ROOT LEVEL (không phải subcollection của groups)
    match /tags/{tagId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Group members collection
    match /group_members/{membershipId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    
    // Group invitations - Real-time notifications
    match /group_invitations/{invitationId} {
      allow read: if request.auth != null && 
        (resource.data.invitee_id == request.auth.uid || 
         resource.data.inviter_id == request.auth.uid);
      allow create: if request.auth != null;
      allow delete, update: if request.auth != null && 
        (resource.data.invitee_id == request.auth.uid ||
         resource.data.inviter_id == request.auth.uid);
    }
  }
}
